{
  "name": "ReMark",
  "manifest_version": 3,
  "version": "0.0.1",
  "description": "Annotate any website",
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "host_permissions": ["*://*/*", "<all_urls>"],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ]
}